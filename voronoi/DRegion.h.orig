#import <Foundation/Foundation.h>


@class DPoint, DBoundary;

@interface DRegion : NSObject {
    __strong DBoundary *_boundary;
    __strong NSMutableArray *_triads;
    __strong NSMutableArray *_points;
    __strong NSMutableArray *_output; // ???
}

@property (readonly) DBoundary *boundary;
@property (readonly) NSArray *triads;
@property (readonly) NSArray *points;
@property (readonly) NSArray *output;
@property (readonly) NSUInteger count;

- (id)initWithTriads:(NSArray *)triads;

- (void)addPoint:(DPoint *)point outputIndex:(NSUInteger)index;
- (void)addPoint:(DPoint *)point;
- (void)addPoints:(NSArray *)points;

- (DPoint *)pointAtIndex:(NSUInteger)index;
- (NSArray *)edgePoints:(NSUInteger)index;

- (void)setFirstOutputIndex:(NSUInteger)index;
- (void)setLastOutputIndex:(NSUInteger)index;

- (BOOL)closeAtPointIndex:(NSUInteger)pointIndex;
- (void)clipAtPointIndex:(NSUInteger)pointIndex;

@end
